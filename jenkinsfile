pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                sh 'pip install -t . -r requirements.txt'
                echo 'Building..'
            }
        }
        stage('Test') {
            steps {
                sh 'pytest'
                echo 'Testing..'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}