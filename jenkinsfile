pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                bat 'pip install -t . -r requirements.txt'
                echo 'Building..'
            }
        }
        stage('Test') {
            steps {
                bat 'python -m pytest'
                echo 'Running tests..'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}